<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="winners" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="openoscars.Controller">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Create Account" />
            <Button mnemonicParsing="false" text="Sign in" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/OpenOscarsWordmark.png" />
               </image>
            </ImageView>
            <TextField promptText="Email Address" />
            <PasswordField promptText="Password" />
            <VBox>
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" text="Sign In" />
                  <Hyperlink text="Forgot Password?" />
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
